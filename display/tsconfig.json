{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022", // this was commonJs
    "declaration": true,
    "lib": ["es2022", "esnext.asynciterable"],
    "sourceMap": true,
    "rootDir": "src",
    "removeComments": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./node_modules"],
  "include": ["src/**/*.ts"]
}
